#
# Makefile for Neo
#

# Package information
PACKAGE_NAME       = @PACKAGE_NAME@
PACKAGE_VERSION    = @PACKAGE_VERSION@
PACKAGE_STRING     = @PACKAGE_STRING@
PACKAGE_BUGREPORT  = @PACKAGE_BUGREPORT@
PACKAGE_TARNAME    = @PACKAGE_TARNAME@
PACKAGE_URL        = @PACKAGE_URL@
TARGET             = $(PACKAGE_TARNAME)
TEST_TARGET        = test-$(TARGET)

# Source files and directories
srcdir      = @srcdir@
SRCS        = $(shell find $(srcdir)/src -type f -name '*.cpp')
OBJS        = $(notdir $(SRCS:%.cpp=%.o)) pan.o
VPATH       = $(shell find $(srcdir)/src -type d)

# Install directories
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@
includedir  = @includedir@/$(PACKAGE_TARNAME)
libdir      = @libdir@
datarootdir = @datarootdir@
mandir      = @mandir@
docdir      = @docdir@
licensedir  = @licensedir@

# Programs and flags
CC          = @CC@
CXX         = @CXX@
LD          = @CXX@
LN_S        = @LN_S@
INSTALL     = @INSTALL@
MKDIR_P     = @MKDIR_P@
CFLAGS      = @CFLAGS@
CXXFLAGS    = @CXXFLAGS@
CPPFLAGS    = @CPPFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
SPINFLAGS   = @SPINFLAGS@

# Test files and directories
TEST_NETS   = $(shell find $(srcdir)/test/networks -type f -name '*.toml')
TEST_SRCS   = $(shell find $(srcdir)/test -type f -name '*.cpp')
TEST_OBJS   = $(notdir $(TEST_SRCS:%.cpp=%.o)) $(filter-out main.o,$(OBJS))
VPATH      += $(shell find $(srcdir)/test -type d)

.SUFFIXES:
.SUFFIXES: .c .o
.SUFFIXES: .cpp .o

all: $(TARGET) install-git-hooks #neo.1.gz

$(TARGET): $(OBJS)
	$(LD) $(LDFLAGS) -o $@ $^ $(LIBS)

$(OBJS): pan.h

pan.o: pan.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -c -o $@ pan.c

pan.h: pan.orig.h
	sed $< \
	    -e '1s/^/#ifdef __cplusplus\nextern "C" {\n#endif\n/' \
	    -e '$$s/$$/\n#ifdef __cplusplus\n}\n#endif/' \
		> $@

pan.c: pan.orig.c
	sed $< \
	    -e '1s/^/#define main(...) spin_main(__VA_ARGS__)\n/' \
		> $@

pan.orig.h: pan.orig.c

pan.orig.c: $(srcdir)/src/network.pml
	spin $(SPINFLAGS) $<
	mv pan.h pan.orig.h
	mv pan.c pan.orig.c

neo.1.gz:
	# TODO

install-git-hooks: $(srcdir)/test/pre-commit.sh
	-@$(LN_S) -f ../../test/pre-commit.sh $(srcdir)/.git/hooks/pre-commit

install: all
	$(INSTALL) -Dm 755 "$(TARGET)" -t "$(bindir)"
	$(INSTALL) -Dm 644 neo.1.gz -t "$(mandir)/man1"
	$(INSTALL) -Dm 644 "$(srcdir)/LICENSE" -t "$(licensedir)"

uninstall:
	-rm -f "$(bindir)/$(TARGET)"
	-rm -f "$(mandir)/man1/neo.1.gz"
	-rm -rf "$(licensedir)"

clean:
	-@rm -rf $(TARGET) $(TEST_TARGET) *.o pan.* *.gcov *.gcda *.gcno neo.1.gz

distclean: clean
	-@rm -rf autom4te.cache codecov.sh config.log config.status configure \
	         Makefile

check: $(TEST_TARGET)
	./$(TEST_TARGET)

$(TEST_TARGET): $(TEST_OBJS)
	$(LD) $(LDFLAGS) -o $@ $^ $(LIBS)

installcheck: install
	# TODO

.PHONY: all install-git-hooks install uninstall clean distclean check \
        installcheck
